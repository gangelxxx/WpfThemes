<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:ColorsLib">

    <!--Global colors-->

    <Color x:Key="KBorder_C">#7b7b7b</Color>
    <SolidColorBrush x:Key="KBorder_Cb" Color="{StaticResource KBorder_C}" />

    <Color x:Key="KDisabled_C">#e0e0e0</Color>
    <SolidColorBrush x:Key="KDisabled_Cb" Color="{StaticResource KDisabled_C}" />

    <Color x:Key="KControlBackground_C">#282828</Color>
    <SolidColorBrush x:Key="KControlBackground_Cb" Color="{StaticResource KControlBackground_C}" />

    <!--ComboBox-->

    <Color x:Key="KComboBoxToggleButtonUp_C">#0099ff</Color>
    <Color x:Key="KComboBoxToggleButtonDown_C">#0099ff</Color>

    <Color x:Key="KComboBoxBackGroundBusyTextbox_C">Black</Color>
    <SolidColorBrush x:Key="KComboBoxBackGroundBusyTextbox_Cb" Color="{StaticResource KComboBoxBackGroundBusyTextbox_C}" />

    <SolidColorBrush x:Key="KComboBoxTextColor_Cb" Color="Black" />

    <Color x:Key="KComboBoxBorder_C">#0099ff</Color>
    <SolidColorBrush x:Key="KComboBoxBorderColor_Cb" Color="{StaticResource KComboBoxBorder_C}"/>
    
    <Color x:Key="KComboBoxBorderSelected_C">#E7F5FF</Color>
    <SolidColorBrush x:Key="KComboBoxBorderSelected_Cb" Color="{StaticResource KComboBoxBorderSelected_C}"/>

    <SolidColorBrush x:Key="KPanelBackground_Cb" Color="{StaticResource KComboBoxBorderSelected_C}"/>

    <!--Slider-->
    <SolidColorBrush x:Key="KLeftSliderButtonBorderBrush_Cb" Color="#282828" />
    <SolidColorBrush x:Key="KRightSliderButtonBorderBrush_Cb" Color="#bcbcbc" />
    <SolidColorBrush x:Key="KSliderThumb_Cb" Color="#282828" />
    <SolidColorBrush x:Key="KSliderBackgroundDynamicText_Cb" Color="#c7c7c7" />

</ResourceDictionary>