<Window x:Class="MessageWindow.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessageWindow"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <StackPanel x:Name="NMessageWindowRadioState">
            <RadioButton GroupName="Languages" Content="info" IsChecked="True" Checked="Info_OnChecked"/>
            <RadioButton GroupName="Languages" Content="warning" Checked="Warning_OnChecked"/>
            <RadioButton GroupName="Languages" Content="error" Checked="Error_OnChecked"/>
        </StackPanel>
    </Grid>
</Window>
